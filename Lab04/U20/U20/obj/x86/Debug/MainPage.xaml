<Page
    x:Class="U20.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U20"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text ="CheckBox" VerticalAlignment="Center" />
        <StackPanel Grid.Column ="1" Margin="20, 10, 0, 10" Orientation="Horizontal">
            <CheckBox x:ConnectionId='12' Name="MyCheckBox"
                      Content="Agree?"                            />
            <TextBlock x:ConnectionId='13' Name="CheckBoxResulttextBlock" />
        </StackPanel>
        <TextBlock Grid.Row="2" Text="RadioButton" VerticalAlignment="Center" />
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="20,10,0,10">
            <RadioButton x:ConnectionId='9' Name="YesRadioButton" Content="Yes" GroupName="MyGroup"                               />

            <RadioButton x:ConnectionId='10' Name="NoRadioButton" Content="No" GroupName="MyGroup"                              ></RadioButton>
            <TextBlock x:ConnectionId='11' Name="RadioButtonTextBlock"></TextBlock>
        </StackPanel>

        <TextBlock x:ConnectionId='2'  Grid.Row="3" Text ="ComboBox" VerticalAlignment="Center" Name="MyComboBox" />
        <StackPanel Grid.Column ="1" Grid.Row="3" Margin="20, 10, 0, 10" Orientation="Horizontal">
            <ComboBox x:ConnectionId='7'                                           >
                <ComboBoxItem Content="Fourth"></ComboBoxItem>
                <ComboBoxItem Content="Firth"></ComboBoxItem>
                <ComboBoxItem Content="Sixth"></ComboBoxItem>
            </ComboBox>
            <TextBlock x:ConnectionId='8' Name="ComboBoxResulttextBlock"></TextBlock>
            
        </StackPanel>
        <TextBlock Grid.Row="4" Text="ListBox" VerticalAlignment="Center"></TextBlock>
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="20,10,0,10">
            <ListBox x:ConnectionId='5' Name="MyListBox" SelectionMode="Multiple"                                            >
                <ListBoxItem Content="First"></ListBoxItem>
                <ListBoxItem Content="Second"></ListBoxItem>
                <ListBoxItem Content="third"></ListBoxItem>
            </ListBox>
            <TextBlock x:ConnectionId='6' Name="ListoxResultTextBlock"></TextBlock>
        </StackPanel>

        <TextBlock Grid.Row="5" Text="Image" VerticalAlignment="Center" />
        <Image Source="Assets/logo.png"
               HorizontalAlignment="Left"
               Width="250" Height="50" Grid.Row="5" Grid.Column="1" Stretch="UniformToFill" Margin="20,10,0,10" />
        <TextBlock Grid.Row="7" Text="ToggleButton" VerticalAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1" Margin="20,10,0,10">
            <ToggleButton x:ConnectionId='3' Name="MyButtonToggle" Content="Premium Option" IsThreeState="True"                             ></ToggleButton>
            <TextBlock x:ConnectionId='4' Name="ToggleButtonResultTextBlock"></TextBlock>
        </StackPanel>
        <TextBlock Grid.Row="8" Text="ToggleSwitch" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="8" Grid.Column="1" Margin="20,10,0,10">
            <ToggleSwitch>
                <ToggleSwitch.OffContent>
                    <TextBlock Text="I'm Off right now"></TextBlock>
                </ToggleSwitch.OffContent>
                <ToggleSwitch.OnContent>
                    <TextBlock Text="I'm On"></TextBlock>
                </ToggleSwitch.OnContent>
            </ToggleSwitch>
        </StackPanel>
    </Grid>
</Page>

